@page
@model SeminarBuildingMap.Areas.Admin.Pages.OwnedRoomSearchModel
@{
    //show all rooms a user owns
    ViewData["Title"] = "Owned Room - Search";
}
    <h1 class="text-dark font-weight-bolder">Select Room to Edit</h1>
@(Html
    .Grid(Model.RoomData)
    .Build(columns =>
    {
        columns.Add(model => model.rmId).Titled("rmId").Css("hiddenColumn");
        columns.Add(model => model.bdId).Titled("Building");
        columns.Add(model => model.rmNo).Titled("Room Number");
    })
    .Empty("No Owned Rooms Found")
    .Sortable()
    .Pageable()
    .Filterable()
)

@section Scripts
{
    <script src="~/js/mvc-grid/mvc-grid.js"></script>
    <script>
        [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
            new MvcGrid(element);
        });
    </script>
    <script>
        document.addEventListener('rowclick', function (e) {
            window.location.href = "OwnedRoomDisplay/" + e.detail.data['rm-id'];
        });
    </script>

}