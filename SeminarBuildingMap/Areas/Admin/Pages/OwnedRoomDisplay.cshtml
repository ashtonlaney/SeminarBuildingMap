@page "{id}"
@model SeminarBuildingMap.Areas.Admin.Pages.OwnedRoomDisplayModel
@{
    //allows user to add or remove events/classes from a room they own
    ViewData["Title"] = "Edit Room";
}
<a asp-page="OwnedRoomSearch/" class="btn btn-default pull-right">Return to search</a>
<h1>Room</h1>
<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item"><a class="nav-link active" role="tab" aria-controls="home" aria-selected="true">View/Edit Room</a></li>
    <li class="nav-item"><a class="nav-link" role="tab" aria-controls="home" aria-selected="false" asp-page="EditAvailability/" asp-route-id="@RouteData.Values["id"]">View/Edit Availability</a></li>
    <li class="nav-item"><a class="nav-link" role="tab" aria-controls="home" aria-selected="false" asp-page="EditEvent/">View/Edit Events</a></li>
    <li class="nav-item"><a class="nav-link" role="tab" aria-controls="home" aria-selected="false" asp-page="EditOwners/">View/Edit Assigned Persons</a></li>
</ul>
<br/>
<div class="tab-content">
    <div class="tab-pane fade show active">
        <form method="post">
            <div class="form-group">
                <label>bdId</label>
                <input class="form-control" asp-for="lclRoom.bdId" disabled />
            </div>
            <div class="form-group">
                <label>rmNo</label>
                <input class="form-control" asp-for="lclRoom.rmNo" disabled />
            </div>
            <div class="form-group">
                <label>rmFloorNo</label>
                <input class="form-control" asp-for="lclRoom.rmFloorNo" disabled />
            </div>
            <div class="form-group">
                <label>rmType</label>
                <input class="form-control" asp-for="lclRoom.rmType" disabled />
            </div>
            <div class="form-group">
                <label>rmName</label>
                <input class="form-control" asp-for="lclRoom.rmName" required />
                <span asp-validation-for="lclRoom.rmName" class="text-danger"></span>
            </div>

            <style>
                .hiddenColumn {
                    display: none;
                }
            </style>
            <button type="submit" class="btn btn-primary">Update Room</button>
        </form>
    </div>
</div>