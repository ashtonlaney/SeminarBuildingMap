@page
@model SeminarBuildingMap.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Admin Panel";
}
<h1>Admin Page</h1>
@if (User.Identity.IsAuthenticated && (User.IsInRole("Faculty") || User.IsInRole("Manager") || User.IsInRole("Admin")))
{
    <div id="faculty">
        <h2>Faculty Permission Level</h2>
        <ul>
            <li>
                <a asp-area="Admin" asp-page="/OwnedRoomSearch">Update Rooms</a>
            </li>
        </ul>
    </div>
}
@if (User.Identity.IsAuthenticated && (User.IsInRole("Manager") || User.IsInRole("Admin")))
{
    <div id="manager">
        <h2>Manager Permission Level (Building Admins like Roshita)</h2>
        <ul>
            <li>
                <a asp-area="Admin" asp-page="/Register">Register New User</a>
            </li>
        </ul>
    </div>
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <div id="admin">
        <h2>Admin Permission Level (Whoever on campus owns this project</h2>
        <ul>
            <li>
                <a asp-area="Admin" asp-page="/BuildingEditSearch">Manage Buildings</a>
            </li>
            <li>
                <a asp-area="Admin" asp-page="/SubuserSearch">Manage Users</a> <!-- admins can promote users to managers of buildings -->
            </li>
        </ul>
    </div>
}
