@using Microsoft.AspNetCore.Identity
@using SeminarBuildingMap.Areas.Identity.Data

@inject SignInManager<SeminarBuildingMapUser> SignInManager
@inject UserManager<SeminarBuildingMapUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SeminarBuildingMap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/mvc-grid/mvc-grid.css" rel="stylesheet">
    @RenderSection("Mapping", required: false)

</head>
<body style="background-color: lightgrey">
    <header>
        <nav class="navbar bg-dark navbar-expand-sm navbar-toggleable-sm mb-3" style="-webkit-box-shadow: 0px 3px 8px 10px #999; box-shadow: 0px 3px 8px 10px #999;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/BuildingMapLogo.png" alt="Logo" style="width:120px" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">MAP</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-page="/Index">ADMIN MENU</a>
                        </li>
                        
                    </ul>

                    <ul class="navbar-nav">
                        
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a id="manage" class="nav-link text-light font-weight-normal" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-light font-weight-bolder btn-outline-light">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
               
            </div>
        </nav>
    </header>
    <div class="container-fluid" style="background-color: lightgrey">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color: lightgrey">
        <div class="container-fluid">
            &copy; 2020 - SeminarBuildingMap - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

